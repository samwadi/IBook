<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/blueish">

        <TextView
            android:id="@+id/bookIdTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book ID: " />

        <TextView
            android:id="@+id/requesterIdTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Requester ID: " />

        <TextView
            android:id="@+id/ownerIdTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Owner ID: " />

        <TextView
            android:id="@+id/cityTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City: " />

        <TextView
            android:id="@+id/areaTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Area: " />

        <TextView
            android:id="@+id/deliveryPersonIdTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivery Person ID: " />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>